@model IEnumerable<_04_Data.Datos.actor>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <br />
    <div class="col-lg-12">
        <!-- section title -->
        <div class="title text-center wow fadeIn" data-wow-duration="500ms">
            <h2>Peliculas <span style="text-shadow: 0 0 0.2em #F87, 0 0 0.2em #F87; color:white;">MARVEL</span></h2>
            <div class="border"></div>
        </div>
        <!-- /section title -->
    </div>
    <br />
    <div class="row">
        <div class="col-lg-12">
            <div class="alex">
                <div class="owl-features owl-carousel" style="text-align:center">
                    @foreach (var item in Model)
                    {
                        <br />
                        <div class="item">
                            <h4 style=" text-shadow: 0 0 0.2em #F87, 0 0 0.2em #F87; font-size: 20px; color: white;">@Html.DisplayFor(modelItem => item.actor_principal)<br></h4>
                            <br /><br />
                            <div class="thumb">
                                <ul>
                                    <li class="btn btn-transparent smooth-scroll;" style="border-width: 2px; font-size: 20px; border-color: aqua">@Html.ActionLink("Edit", "Edit", new { id = item.id })</li>
                                    <li class="btn btn-transparent smooth-scroll;" style="border-width: 2px; font-size: 20px; border-color: aqua">@Html.ActionLink("Details", "Details", new { id = item.id })</li>
                                    <li class="btn btn-transparent smooth-scroll;" style="border-width: 2px; font-size: 20px; border-color: aqua">@Html.ActionLink("Delete", "Delete", new { id = item.id })</li>
                                    <li class="btn btn-transparent smooth-scroll;" style="border-width: 2px; font-size: 20px; border-color: aqua">@Html.ActionLink("DetailsAjax", "DetailsAjax", new { id = item.id })</li>
                                </ul>
                            </div>
                            <br /><br />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
